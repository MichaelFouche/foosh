<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@drawable/abc_ab_bottom_solid_light_holo">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/Address"
            android:id="@+id/textView"
            android:textColor="#ff2536ff" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="@string/add_contact"
            android:layout_marginLeft="40dp"
            android:id="@+id/btnAddNewContact"
            android:layout_gravity="right" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/relativeLayout1"
        android:layout_height="29dp"
        android:layout_width="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:id="@+id/FirstText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/address_col1"
            android:layout_weight="0.54"
            android:textColor="#ff14b7ff"
            android:textStyle="bold">
        </TextView>

        <TextView
            android:id="@+id/SecondText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/address_col2"
            android:layout_weight="2"
            android:textColor="#ff14b7ff"
            android:textStyle="bold">
        </TextView>

    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/listView"
        android:layout_weight="0.76" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/address_detail"
        android:id="@+id/textView2"
        android:textColor="#ff2536ff" />


    //-----------
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:width="120dp"
            android:text="@string/address_fname"
            android:id="@+id/textView3"
            android:layout_gravity="center"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="15"
            android:id="@+id/txtVName"
            android:layout_gravity="center_horizontal"
            android:layout_column="2"
            android:hint="@string/address_fname"
            android:editable="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:width="120dp"
            android:text="@string/address_surname"
            android:id="@+id/textView4"
            android:layout_gravity="center"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtVSurname"
            android:layout_column="2"
            android:hint="@string/address_surname" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:width="120dp"
            android:text="@string/address_email"
            android:id="@+id/textView5"
            android:layout_gravity="center"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="15"
            android:id="@+id/txtVEmail"
            android:layout_column="2"
            android:hint="@string/address_email" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:width="120dp"
            android:text="@string/address_cell"
            android:id="@+id/textView6"
            android:layout_gravity="center"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="15"
            android:id="@+id/txtVCell"
            android:layout_column="2"
            android:hint="@string/address_cell" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:width="120dp"
            android:text="@string/address_address"
            android:id="@+id/textView7"
            android:layout_gravity="center"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPostalAddress"
            android:ems="15"
            android:id="@+id/txtVAddress"
            android:layout_column="2"
        android:hint="@string/address_address" />
    </LinearLayout>
    //--------------

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="@string/address_delBtn"
            android:id="@+id/btnDeleteContact" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="@string/address_saveBtn"
            android:id="@+id/btnUpdateContact"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
</LinearLayout>